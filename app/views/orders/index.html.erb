
<div class="row seller-events text-center event-page-inner"><span><h3>Your Past Orders</h3></span>
  <table class="table orders datatable row seller-events text-center event-page-inner">
    <thead>
      <tr>
        <th>Date</th>
        <th>Date updated</th>
        <th>Order(click for details)</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% if @orders.nil? || @orders.count == 0 %>
        <div>You have no prior orders</div>
      <% else %>

        <% @orders.each do |order| %>
        <tr>
          <td><%= order.formatted_created_at %></td>
          <% if order.updated? %>
            <td><%= order.formatted_updated_at %></td>
          <% else %>
            <td></td>
          <% end %>
          <td><%= link_to order.id, order_path(order.id) %></td>
          <td><%= order.order_total %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
<div class="summary row">
  <h3>Total Orders: <%= @orders.count %></h3>
</div>
