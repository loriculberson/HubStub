<div class="seller-page-title">
  <h1>Orders for <%=@user.full_name%></h1>
  <br />
</div>
<div class="row seller-events text-center event-page-inner">
  <table class="table table-hover event-tickets">
    <thead>
      <h4> <%= "No past orders for user: #{@user.display_name}" if current_user.orders.empty? %> </h4>
    </thead>
  </table>

<div class="row event-page-ticket-listing event-page-inner">
  <table class="table table-hover event-tickets">
  <%= will_paginate %>
    <thead>
      <tr id="seller-events">
        <th colspan=8 class="vert-align">
         
        </th>
      </tr>
      <tr>
        <th>Order</th>
        <th>Status</th>
        <th>Number of Items</th>
        <th>Total Price</th>
        <th>Date Orderd</th>
      </tr>
    </thead>
    <tbody>
<% @orders.each do |order| %>
      <tr>
        <td> <%= link_to("#{order.id}", seller_order_path(@user.slug, order)) %></td>
        <td class="vert-align"%><%= order.status %></td>
        <td class="vert-align"><%= order.items.size %></td>
        <td class="vert-align"><%= order.total_price %></td>
        <td class="vert-align"><%= order.created_at.strftime("%A, %B %d, %Y") %></td>
      </tr>
<% end %>
    </tbody>
  </table>
</div>
